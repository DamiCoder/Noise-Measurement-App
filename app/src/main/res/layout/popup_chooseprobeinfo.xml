<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="360dp"
                                                   android:layout_height="550dp"
                                                   android:background="@drawable/popup_chooseprobeinfo_bg">

    <TextView
            android:text="Do czego próbka będzie wykorzystywana?"
            android:layout_width="296dp"
            android:layout_height="33dp"
            android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/header" android:textAlignment="center" android:fontFamily="@font/open_sans"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="303dp"
            android:layout_height="400dp"
            android:id="@+id/textView9" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            android:textColor="@color/inputHint" android:fontFamily="@font/open_sans"
            android:text="@string/chooseprobe_infodescription_text" app:layout_constraintHorizontal_bias="0.515"/>
    <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/popup_chooseprobeinfo_closebutton" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            android:background="@drawable/ic_close"/>
</androidx.constraintlayout.widget.ConstraintLayout>