<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="46dp">

    <TextView
            android:text="yyyy-MM-dd HH:mm"
            android:layout_width="79dp"
            android:layout_height="46dp"
            android:id="@+id/textview_archive_date"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:gravity="center" tools:ignore="HardcodedText" android:padding="5dp"
            android:fontFamily="@font/open_sans"/>
    <TextView
            android:text="Dobry"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:id="@+id/textview_archive_result" app:layout_constraintStart_toEndOf="@+id/textview_archive_date"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="HardcodedText" android:gravity="center"
            android:fontFamily="@font/open_sans"/>
    <Button
            android:text="Szczegóły"
            android:layout_width="90dp"
            android:layout_height="46dp"
            android:id="@+id/button_archive_description" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="0.538" tools:ignore="HardcodedText"
            android:fontFamily="@font/open_sans_bold" android:layout_marginHorizontal="3dp" android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>