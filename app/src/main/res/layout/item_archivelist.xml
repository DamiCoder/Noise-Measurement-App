<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="46dp"
                                                   android:id="@+id/constraintlayout_archive">

    <TextView
            android:text="yyyy-MM-dd HH:mm"
            android:layout_width="79dp"
            android:layout_height="46dp"
            android:id="@+id/textview_archive_date"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText"
            android:textSize="15sp" android:gravity="center_horizontal"
            android:layout_marginStart="16dp" android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans"/>
    <TextView
            android:text="Dobry"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:id="@+id/textview_archive_result" app:layout_constraintStart_toEndOf="@+id/textview_archive_date"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="HardcodedText"
            android:fontFamily="@font/open_sans" android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical" android:textColor="@android:color/black"/>
    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/button_archive_description" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" tools:ignore="HardcodedText"
            android:layout_marginHorizontal="3dp" android:gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/ic_more_details" android:fontFamily="@font/open_sans"
    />
</androidx.constraintlayout.widget.ConstraintLayout>