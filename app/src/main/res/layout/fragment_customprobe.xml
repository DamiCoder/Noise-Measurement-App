<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:id="@+id/customprobe_constraintlayout">
    <TextView
            android:text="@string/customprobe_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            android:fontFamily="@font/open_sans_bold" android:textColor="@color/header" android:textStyle="bold"
            android:textSize="24sp"/>
    <TextView
            android:text="@string/customprobe_stepsheader"
            android:layout_width="308dp"
            android:layout_height="32dp"
            android:id="@+id/textView10" android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/inputHint" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.504"/>
    <TextView
            android:text="@string/customprobe_step1"
            android:layout_width="308dp"
            android:layout_height="113dp"
            android:id="@+id/textView11" android:textColor="@color/inputHint"
            android:fontFamily="@font/open_sans" android:textAlignment="viewStart" android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="@string/bottommenu_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customprobe_recordbutton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/login_button_bg"
            android:fontFamily="@font/open_sans_bold" android:paddingHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@+id/customprobe_progressbar" android:layout_marginTop="40dp"/>
    <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="310dp"
            android:layout_height="19dp"
            android:id="@+id/customprobe_progressbar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" android:layout_marginTop="244dp"
            android:visibility="invisible" android:progressDrawable="@drawable/progress_bar_states"
            app:layout_constraintHorizontal_bias="0.485"/>
    <TextView
            android:text="@string/customprobe_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customprobe_recordingtextview"
            app:layout_constraintBottom_toTopOf="@+id/customprobe_progressbar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/header" android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>