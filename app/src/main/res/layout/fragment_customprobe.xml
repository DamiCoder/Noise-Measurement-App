<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:id="@+id/customprobe_constraintlayout">
    <TextView
            android:text="Nagraj własną próbkę"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            android:fontFamily="@font/open_sans_bold" android:textColor="@color/header" android:textStyle="bold"
            android:textSize="24sp"/>
    <TextView
            android:text="Kroki które musisz wykonać:"
            android:layout_width="308dp"
            android:layout_height="32dp"
            android:id="@+id/textView10" android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/inputHint" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="1. Przygotuj odpowiednio miejsce w którym zarejestrujesz próbkę - musi być jak najbardziej ciche"
            android:layout_width="307dp"
            android:layout_height="58dp"
            android:id="@+id/textView11" android:textColor="@color/inputHint"
            android:fontFamily="@font/open_sans" android:textAlignment="viewStart" android:paddingHorizontal="10dp"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="2. Wciśnij poniższy przycisk i odczekaj 20 sekund - po tym czasie nagrywanie zostanie zakończone, telefon zawibruje i wydobędzie się z niego sygnał dźwiękowy, informujący o zakończeniu nagrywania"
            android:layout_width="310dp"
            android:layout_height="102dp"
            android:id="@+id/textView12" android:textColor="@color/inputHint"
            android:fontFamily="@font/open_sans" android:textAlignment="viewStart" android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/bottommenu_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customprobe_recordbutton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/login_button_bg"
            android:fontFamily="@font/open_sans_bold" android:paddingHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@+id/customprobe_progressbar" android:layout_marginTop="40dp"/>
    <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="310dp"
            android:layout_height="19dp"
            android:id="@+id/customprobe_progressbar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginTop="68dp"
            android:visibility="invisible" android:progressDrawable="@drawable/progress_bar_states"/>
    <TextView
            android:text="Pomiń i użyj próbki predefiniowanej"
            android:layout_width="228dp"
            android:layout_height="21dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            android:id="@+id/customprobe_usedefaultprobetextview"/>
    <TextView
            android:text="*Nagrywanie*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customprobe_recordingtextview"
            app:layout_constraintBottom_toTopOf="@+id/customprobe_progressbar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/header" android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>