<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content" android:layout_height="60dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/standarddiscovery_headertext"
              android:textColor="@color/header" android:textAlignment="center" android:textSize="24sp"
              android:fontFamily="@font/open_sans_bold"
              android:text="Normy ${rodzaj}"
              android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.497" tools:ignore="HardcodedText"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@android:color/darker_gray" android:id="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/standarddiscovery_headertext" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="610dp"
            app:layout_constraintTop_toBottomOf="@+id/standarddiscovery_headertext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/recyclerview_standardsdiscovery"/>
    <Button
            android:layout_width="24dp"
            android:layout_height="30dp" android:id="@+id/standardsdiscovery_backbutton"
            app:layout_constraintTop_toTopOf="parent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="16dp"
            android:background="@drawable/arrow_back" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>