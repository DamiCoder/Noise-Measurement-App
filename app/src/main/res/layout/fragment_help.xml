<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@string/help_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"
            android:fontFamily="@font/open_sans_bold" android:textColor="@color/header" android:textAlignment="center"
            android:gravity="center"/>
    <TextView
            android:text="@string/help_content"
            android:layout_width="351dp"
            android:scrollbars="vertical"
            tools:ignore="HardcodedText"
            android:layout_height="420dp" android:id="@+id/help_helptextview"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="viewStart" android:textSize="14sp"
            android:textColor="@color/inputHint" android:fontFamily="@font/open_sans"
            android:layout_marginHorizontal="24dp" android:paddingHorizontal="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>